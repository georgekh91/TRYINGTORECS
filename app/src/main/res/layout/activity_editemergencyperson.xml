<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emi"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".editprofile">

    <TextView
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:fontFamily="serif-monospace"
        android:text="Edit emergencyperson"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/old_name_edittext"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="8dp"
        android:fontFamily="serif-monospace"
        android:hint="old Name..."
        android:padding="8dp"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/new_name_edittext"
        android:layout_width="336dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="8dp"
        android:fontFamily="serif-monospace"
        android:hint="NEW Name..."
        android:padding="8dp"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/old_email_edittext"
        android:layout_width="334dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="8dp"
        android:fontFamily="serif-monospace"
        android:hint="old Email..."
        android:padding="8dp"
        android:textColorHint="#000000" />


    <EditText
        android:id="@+id/new_email_edittext"
        android:layout_width="336dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="8dp"
        android:fontFamily="serif-monospace"
        android:hint="NEW Email..."
        android:padding="8dp"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/saveButton"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Save"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="20dp" />


</LinearLayout>

